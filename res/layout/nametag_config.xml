<?xml version="1.0" encoding="UTF-8"?>
  <ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >
<TextView android:id="@+id/confActTitle"
	style="@style/menuActivityTitle"
	android:text="@string/app_name"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	/>
<TextView android:id="@+id/confActChooseStylePrompt"
	style="@style/menuActivityBody"
	android:text="Type something"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#000000"
	/>
<EditText android:id ="@+id/name_edit"
 style="@style/menuActivityBody"
 android:textColor="#000000"
 android:text=""
 android:layout_width="100dp"
 android:layout_height="wrap_content"
 android:selectAllOnFocus="true"
/>
<TextView android:id="@+id/preview_text"
	style="@style/menuActivityBody"
	android:text="Preview Text"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	/>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/previewLayout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center">
<ImageView android:id="@+id/pic0"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic1"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic2"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic3"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic4"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic5"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
<ImageView android:id="@+id/pic6"
        android:text="@string/message_default"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_centerInParent="true"/>
</LinearLayout>
<Button android:id="@+id/save_button"
		style="@style/menuActivityBody"		
		android:textColor="#ffffff"
		android:text="Save"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		/>
</LinearLayout>
</ScrollView>